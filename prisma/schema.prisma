generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model diseases {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String   @unique
  description     String?
  scientific_name String
  classification  String
  severity        String
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  // @@map("diseases")
}
